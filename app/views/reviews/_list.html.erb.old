<% if @reviews.count == 0 %>
	<div class="text-center"><h4>There is no Review yet.</h4></div>
<% else %>

	<% @reviews.order("id").each do |r| %>
		<span><hr class="colorgraph"></span>

		<div class="row">
			<div class="col-md-1">
				<%= image_tag avatar_url(r.user), class: "img-circle avatar-medium" %>
			</div>
			<div class="col-md-11">
				<div>
					<strong><%= r.user.first_name %><%= r.user.last_name %><div id="stars_<%= r.id %>"></div></strong>
					<strong><%= r.rating %></strong>
					<span class="pull-right">
						<%= link_to "Remove My Review", [@experience, r], method: :delete, data: {confirm: "Are you sure?"} if current_user && current_user == r.user %>
					</span>
				</div>
				
				<div><%= r.rating_desc %></div>
			</div>
		</div>

		<script>
			$('#stars_<%= r.id %>').raty({
				path: '/assets',
				readOnly: true,
				score: <%= r.rating %>
			});
		</script>

	<% end %>

<% end %>

