

<div class = 'col-md-3'>
 
  <div class = 'mydisplay hover-shadow img-responsive'>

      <%= link_to image_tag(experience.photos[0].image.url, width: 255, height: 350), experience_path(experience) if experience.photos.length > 0 %>
       
      <!-- <%= link_to image_tag("/assets/surfer.png", width: 255, height: 350),  experience_path(experience) %>  -->
        <!-- <small><div class ='expname'><%= link_to experience.exp_name %></div></small> -->
  </div>

  <div class='caption'>
    <p>
      <span><br/>$</span><strong><%= link_to experience.exp_price, experience_path(experience) %></strong> 
      <strong><%= link_to experience.exp_name, experience_path(experience) %> <br/></strong>
     <!--
      <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-star" aria-hidden="true"></span> 
    -->
  
     <span id="average_rating_<%= experience.id %>"</span><label> Reviews </label>(<%= experience.reviews.count %>)
    
    </p>
    <br/><br/>
  </div>

</div>

<script>
$('#average_rating_<%= experience.id %>').raty({
    path: '/assets',
    readOnly: true,
    targetKeep: false,
    score: <%= experience.reviews.average(:rating) %>
  });
</script>


