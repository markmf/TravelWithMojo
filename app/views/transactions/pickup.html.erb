
<div class="col-md-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="text-center" >
				<h1> We appreciate your order.</h1>
				<h3> Enjoy your experience - <%= @experience.exp_name %>!!! </h3>
			</div>
		</div>
		<div class="panel-body">	
			<div class="row">
				<div class="col-md-3">
					 <div class = 'mydisplay hover-shadow img-responsive'>
					 	<%= image_tag @experience.photos[0].image.url(:thumb) if @experience.photos.length > 0 %>
			
					 </div> 
				</div>		
				<div class="col-md-5">
					<h4><%= @experience.exp_name %></h4> 
					<h4>$<%= @experience.exp_price %></h4>
					<h4><%= @experience.start_date.strftime('%A, %v') %></h4>
					<h4><%= @experience.go_time.strftime('%r') %></h4>
				</div>		
				<div class="col-md-4">
					<span><%= link_to "View", experience_path(@experience), class: "btn btn-primary" %></span>
					&nbsp;&nbsp;
					<%= link_to "Share Itinerary", '#', class: "btn btn-primary", id: "myBtn" %>
				</div>		
			</div>
			<span><hr class="colorgraph"></span>
		</div>
	</div>
</div>



 <div id="myGuestModal" class="modal" role="dialog">
     <!-- Modal content -->
    <div class="modal-content animate" id="closeIt"> 
          <span class="close">&times;</span>   
        <br/>
        <div class="modal-body">
           <!-- Show available dates for this experience -->
          
			<div class="row" id="guest-form" >
				<div class="col-md-12">
				 	Enter the following info so we can send guest the itinerary. Make sure to enter their actual email.
					<br/><br/>
					<%= render 'guests/form' %>
				</div>
          
			</div>


        </div>
    </div>
  </div>


  <script>
// Get the modal

var modal = document.getElementById("myGuestModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");



// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal 
btn.onclick = function() {
  
    modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}



// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }

}
</script>