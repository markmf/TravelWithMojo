		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'omb_loginForm'}) do |f| %>

					<%= render 'shared/devisemes' %>

				  	<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-user"></i></span>
				    	<%= f.email_field :email, required: false, autofocus: true, label: false, placeholder: 'Email', class: 'form-control' %>
					</div>

					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
				    	<%= f.password_field :password, required: false, label: false, placeholder: 'Password', class: 'form-control' %>
				    </div>

				    <br/>
					<%= f.button :submit, "Get Started", class: 'btn btn-primary btn-block'%>

			  
			    <br/>
			</div>
		</div>	
