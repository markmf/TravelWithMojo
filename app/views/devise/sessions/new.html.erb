
<br/>


    

<div class="container">
    
    <div class="omb_login">

    	<h2 class="text-center">Login</h2>
		<!--
		<h3 class="omb_authTitle">Login or <%= link_to 'Sign Up', new_user_registration_path %></h3>
		-->
		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">					
				<span><hr class="colorgraph"></span>
			</div>
		</div>

		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">
				
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'omb_loginForm'}) do |f| %>

					<%= render 'shared/devisemes' %>

				  	<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
				    	<%= f.email_field :email, required: false, autofocus: true, label: false, placeholder: 'Email', class: 'form-control' %>
					</div>

					<div class="input-group">
						<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
				    	<%= f.password_field :password, required: false, label: false, placeholder: 'Password', class: 'form-control' %>
				    </div>

				    <br/>
					<%= f.button :submit, "GET STARTED", class: 'btn btn-primary btn-block', id: 'submitBtn' %>

			  
			</div>
		</div>	




<!--
		<div class="row omb_row-sm-offset-3 omb_loginOr">
			<div class="col-xs-12 col-sm-6">					
				<hr class="omb_hrOr"> 
				<span class="omb_spanOr">Or</span>
			</div>
		</div>
-->
		<br/>
		<div class="text-center">OR Sign in with</div>
		<br/>

		<div class="row omb_row-sm-offset-3 omb_socialButtons">
			
    	    <div class="col-xs-4 col-sm-2">
    	    	<%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-block omb_btn-facebook" %>
			        <i class="fa fa-facebook visible-xs"></i>
			        <span class="hidden-xs"></span>
		        </a>
	        </div>
        	<div class="col-xs-4 col-sm-2">
		     <%= link_to "Twitter", user_twitter_omniauth_authorize_path, class: "btn btn-lg btn-block omb_btn-twitter" %>
			        <i class="fa fa-twitter visible-xs"></i>
			        <span class="hidden-xs"></span>
		        </a>
	        </div>	
        	<div class="col-xs-4 col-sm-2">
		        
		        <%= link_to "Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-lg btn-block omb_btn-google", id: "googleButton" %>
			        <i class="fa fa-google-plus visible-xs"></i>
			        <span class="hidden-xs"></span>
		        </a>
	        </div>	
		</div>


		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">					
				<span><hr class="colorgraph"></span>
			</div>
		</div>				
		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-3">			
				<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
				<% end %>
			</div>
			<div class="col-xs-12 col-sm-3">

				<p class="omb_forgotPwd">
					<%= link_to "Forgot your password?", new_password_path(resource_name) %>
				</p>
				<div class="pull-right" >
					<p><%= link_to 'Sign Up', new_user_registration_path %></p>
				</div>
			</div>
			
		</div>	    
		

				<!--
				<%= render "devise/shared/links" %>
				-->
	</div>
</div>



<script>

	var btn = document.getElementById("submitBtn");
	var googlebtn = document.getElementById("googleButton");

	btn.onclick = function() {
    	document.body.style.cursor = 'wait';
	}

	googlebtn.onclick = function() {
    	document.body.style.cursor = 'wait';
	}


</script>


